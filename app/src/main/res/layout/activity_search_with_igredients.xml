    </ListView>

    <ListView
        android:id="@+id/listviewSearchIngredientsSelected"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/textView21"
        android:layout_marginTop="12dp" />

    <Button

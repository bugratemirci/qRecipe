<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".AddRecipeActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="60dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/textViewUserOperations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarif Adı:"
                android:textColor="@color/TextColors"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/textboxNewRecipeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginLeft="15dp"
                android:textColor="@color/TextColors"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/textview_border"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resim seç:"
                android:layout_gravity="center"
                android:textColor="@color/TextColors"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <ImageView

                android:id="@+id/uploadImageButtonAddRecipe"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/gallery_icon_for_upload_white"
                android:background="@drawable/buttonstyle"
                app:backgroundTint="@color/buttonColors"
                android:layout_marginLeft="70dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="10dp">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/showImageAddRecipe"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:scaleType="centerInside"
                android:src="@drawable/no_image"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="10dp">

            <Button

                android:id="@+id/buttonNewRecipeChooseMaterials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonstyle"
                android:text="İleri"
                android:textColor="@color/buttonTextColors"
                app:backgroundTint="@color/buttonColors" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>